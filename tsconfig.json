{
  "compilerOptions": {
    "lib": [
      "ES2018",
      "dom"
    ],
    "module": "CommonJS",
    "target": "ES2018",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "@types/node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "**/*.tsx",
    "**/*.jsx",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "cache",
    "artifacts"
  ]
}
